<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1">
    <ImageView
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:id="@+id/custimage"


        />
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="ghjghjbjkjjghhghhhhhhh"
        android:textColor="#000"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:layout_toRightOf="@+id/custimage"
        android:id="@+id/custtext"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:id="@+id/custtext2"
        android:layout_toRightOf="@+id/custimage"
        android:layout_below="@+id/custtext"
       android:layout_marginLeft="20sp"
        android:textColor="#000"
        android:text="fffffdddddddfffhhhhhhdddddff"
         />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginBottom="5sp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:background="@drawable/divider3"
           />


    </RelativeLayout>
</RelativeLayout>
