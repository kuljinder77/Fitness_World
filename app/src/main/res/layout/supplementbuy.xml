

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:layout_width="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@drawable/back1"
        android:orientation="vertical">

    <TextView
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:textSize="25sp"
        android:text="x"
        android:textColor="#000"
        android:gravity="center"
        android:paddingBottom="2sp"
        android:background="@drawable/imageshape"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:id="@+id/close"
        android:layout_gravity="right" />

    <ImageView
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:id="@+id/supimage"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#000"
        android:text="dfgfggfgfgfg"
        android:id="@+id/supname"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:text="Type:"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="#000"

            />
        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:id="@+id/suptype"
            android:textColor="#000"

            android:text="dddddd"

            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:text="Weight:"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="#000"

            />
        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:id="@+id/supweight"
            android:textColor="#000"

            android:text="dddddd"

            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:text="Price:"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="#000"

            />
        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:id="@+id/supprice"
            android:textColor="#000"

            android:text="dddddd"

            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:text="Details:"
            android:gravity="left"
            android:textSize="20sp"
            android:textColor="#000"

            />
        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/supdetail"
            android:textColor="#000"
            android:layout_marginBottom="20sp"


            android:text="Advance WHEY PRO is A CONCENTRATE Source amino dense, Premium whey protein blend Designed and produced exclusively by ADVANCE NUTRATECH. It stimulated lean muscle growth. It enhance with digestive enzymes for easily digestion. It has controlled release of protein blend of whey protein concentrates . It is also help to reduce MINERAL DEPLETION and helps to improve muscular growth and repair. "

            />






    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center">

        <Button
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:id="@+id/buy"
            android:background="@drawable/imageshape"
            android:textColor="#000"
            android:textStyle="bold|italic"
            android:text="Buy"
            />



    </RelativeLayout>




</LinearLayout>
        </RelativeLayout>

</ScrollView>
